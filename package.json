{
  "name": "pscode",
  "displayName": "PSCode",
  "description": "Problem-Solving in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pscode-sidebar",
          "title": "PSCode",
          "icon": "./dist/static/icon.svg"
        }
      ]
    },
    "views": {
      "pscode-sidebar": [
        {
          "type": "webview",
          "id": "pscode.testcase",
          "name": "Test Case"
        },
        {
          "type": "webview",
          "id": "pscode.compile",
          "name": "Compile"
        }
      ]
    },
    "commands": [
      {
        "command": "pscode.activate",
        "title": "PSCode : Activate PSCode"
      },
      {
        "command": "pscode.deactivate",
        "title": "PSCode : Deactivate PSCode"
      },
      {
        "command": "pscode.compile",
        "title": "PSCode : Compile current problem"
      },
      {
        "command": "pscode.test",
        "title": "PSCode : Test current problem"
      },
      {
        "command": "pscode.new",
        "title": "PSCode : New PS problem"
      },
      {
        "command": "pscode.panic",
        "title": "PSCode : Give up current PS problem"
      },
      {
        "command": "pscode.focus",
        "title": "PSCode : Focus Mode On"
      },
      {
        "command": "pscode.distract",
        "title": "PSCode : Focus Mode Off"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "preutest": "npm run compile-tests && npm run lint && copyfiles --flat ./src/utest/files/* ./out/utest/files/",
    "utest": "mocha --ui tdd ./out/utest/*.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "copy-webpack-plugin": "^11.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
